{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": ".",
        "declaration": false,
        "emitDecoratorMetadata": true,
        "esModuleInterop": false,
        "experimentalDecorators": true,
        "importHelpers": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist",
        "skipLibCheck": true,
        "sourceMap": false,
        "target": "es5",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2018",
            "dom"
        ],
        "types": [
            "node"
        ]
    }
}